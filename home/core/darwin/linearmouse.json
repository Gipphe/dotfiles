{
  "$schema": "https://schema.linearmouse.app/0.9.5",
  "schemes": [
    {
      "pointer": {
        "disableAcceleration": true
      },
      "scrolling": {
        "distance": {
          "vertical": "98.6px"
        },
        "acceleration": {
          "vertical": 1
        },
        "speed": {
          "vertical": 0
        }
      },
      "if": {
        "device": {
          "category": "mouse"
        }
      }
    },
    {
      "scrolling": {
        "reverse": {
          "vertical": false,
          "horizontal": true
        }
      },
      "if": {
        "device": {
          "category": "trackpad"
        }
      }
    },
    {
      "scrolling": {
        "acceleration": {
          "vertical": 1
        },
        "reverse": {
          "vertical": false
        }
      },
      "if": {
        "device": {
          "productID": "0x0",
          "category": "trackpad",
          "vendorID": "0x0",
          "productName": "Apple Internal Keyboard / Trackpad"
        }
      }
    }
  ]
}

