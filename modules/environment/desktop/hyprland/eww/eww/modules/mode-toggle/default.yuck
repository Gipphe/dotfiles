(deflisten mode `cat "$HOME/.cache/gipphe/theme" || echo "dark"`)

(defwidget mode []
  (button :class "mode-toggle"
          :hexpand false
          :vexpand false
          :halign "center"
          :onclick `./scripts/theme.fish`
    (label :hexpand false
           :vexpand false
           :text {mode == 'light' ? '󰃠' : '󰃛'})))
